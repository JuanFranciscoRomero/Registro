@model IEnumerable<RegistrodeEmpleado.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create" class="btn btn-success">Registrar nuevo empleado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechadeNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechadeRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beneficios)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Habilidades)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proyectos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechadeNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechadeRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beneficios.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Habilidades.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proyectos.Id)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
